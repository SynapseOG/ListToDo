@model ListToDo.Models.ToDo

@{
    Layout = null;
}
<form method="post" asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Edycja zadania</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Task"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="DateAddition"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="Task" class="form-control" />
                        <span asp-validation-for="Task" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <input asp-for="DateAddition" class="form-control" />
                        <span asp-validation-for="DateAddition" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Edytuj" />
                        </div>
                        <div class="col">
                            <a class="btn btn-success w-75" asp-action="TaskIndex">Powrót</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />